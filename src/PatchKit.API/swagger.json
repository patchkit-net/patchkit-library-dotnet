                    },
                    {
                        "name": "api_key",
                        "in": "query",
                        "required": true,
                        "type": "string",
                        "description": "Application owner API key."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Version published sucessfully."
                    }
                },
                "tags": [
                    "App",
                    "Version"
                ]
            }
        }
